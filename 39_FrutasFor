class Arreglos {
    public static void main(String[] args) {
        String[] frutas = new String[4];
        frutas[0] = "Manzana ";
        frutas[1] = "Banano ";
        frutas[2] = "Sandia ";
        frutas[3] = "Pera "; 
        System.out.println("Mi fruta favorita es: "+frutas[3]);
        for (int i =0; i < 4; i++){
            System.out.println("Mi futra favorita es: "+frutas[i]);
        } 
    }
}
